{
  "manifest_version": 3,
  "name": "ScholarRank Companion",
  "description": "Surface conference rankings next to Google Scholar search results.",
  "version": "0.1.3",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScholarRank Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://scholar.googleusercontent.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/conferences.json",
        "data/manual_conferences.json"
      ],
      "matches": [
        "https://*.google.com/*",
        "https://scholar.googleusercontent.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.conferenceranks.com/*"
  ]
}
